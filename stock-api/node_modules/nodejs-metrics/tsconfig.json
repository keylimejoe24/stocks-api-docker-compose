{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "types": [
      "node",
      "jasmine",
      "jasmine-expect"
    ],
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "lib",
    "spec"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "redis_stable",
    "samples"
  ]
}
